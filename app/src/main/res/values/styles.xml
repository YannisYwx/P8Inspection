<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- Customize your theme here. -->
        <!--控制标题栏颜色-->
        <item name="colorPrimary">@color/themeBlue</item>
        <!--控制状态栏颜色-->
        <item name="colorPrimaryDark">@color/white</item>
        <!--控制activity 内容部分的大部分颜色-->
        <item name="colorAccent">@color/themeBlue</item>

        <item name="android:windowContentOverlay">@null</item>

        <item name="colorControlHighlight">#1000</item><!--波纹颜色-->
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:dividerHeight">0.68dp</item>
        <item name="android:listDivider">@drawable/list_divider</item><!--统一list item 间隔线-->
        <item name="android:listSelector">@drawable/comm_list_selector</item><!--统一list item点击效果-->
        <item name="android:windowBackground">@color/white</item><!--统一窗体背景颜色-->
        <item name="actionBarSize">144pt</item>
        <item name="android:actionBarSize">144pt</item>
    </style>

    <!--登录注册 编辑框的样式-->
    <style name="GroupEditText">
        <item name="android:layout_marginRight">90pt</item>
        <item name="android:layout_marginLeft">90pt</item>
    </style>

    <!--通用按钮的样式-->
    <style name="NormalButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">135pt</item>
        <item name="android:background">@drawable/normal_button_selector</item>
        <item name="android:layout_marginLeft">135pt</item>
        <item name="android:layout_marginRight">135pt</item>
        <item name="android:textSize">54pt</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PopupAnimation" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_exit</item>
    </style>

    <style name="dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

</resources>