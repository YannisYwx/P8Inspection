<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_login"
        style="@style/NormalButton"
        android:layout_marginTop="42dp"
        android:text="@string/immediatelyLogin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_info" />

    <ImageView
        android:id="@+id/iv_wechat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@mipmap/icon_wechat"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_other" />

    <TextView
        android:id="@+id/tv_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/orangeRed"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/net_password"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/tv_forget_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/net_password"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="30dp"
        android:text="@string/forgetPwd"
        android:textColor="@color/textGray"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_info"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv_p8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:drawablePadding="10dp"
        android:gravity="center_horizontal"
        android:text="P8车服"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_large_size"
        app:drawableTopCompat="@mipmap/login_logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/line1"
        android:layout_width="0dp"
        android:layout_height="0.68dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="5dp"
        android:layout_weight="1"
        android:background="@color/alpha_10_black"
        app:layout_constraintBottom_toBottomOf="@+id/tv_other"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_other"
        app:layout_constraintTop_toTopOf="@+id/tv_other" />

    <TextView
        android:id="@+id/tv_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="其他登录方式"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_login" />

    <TextView
        android:id="@+id/line2"
        android:layout_width="0dp"
        android:layout_height="0.68dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="40dp"
        android:layout_weight="1"
        android:background="@color/alpha_10_black"
        app:layout_constraintBottom_toBottomOf="@+id/tv_other"
        app:layout_constraintLeft_toRightOf="@+id/tv_other"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_other" />

    <com.p8.common.widget.MultiFunEditText
        android:id="@+id/net_account"
        style="@style/GroupEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:icon="@mipmap/icon_user"
        app:inputType="visible_psw"
        app:isDeletable="true"
        app:isPswIcon="false"
        app:isShowBottomLine="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_p8" />


    <com.p8.common.widget.MultiFunEditText
        android:id="@+id/net_password"
        style="@style/GroupEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:icon="@mipmap/icon_password"
        app:isDeletable="true"
        app:isPswIcon="true"
        app:isShowBottomLine="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/net_account" />
</androidx.constraintlayout.widget.ConstraintLayout>