<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_search"
        android:layout_width="160pt"
        android:layout_height="88pt"
        android:layout_marginStart="60pt"
        android:layout_marginEnd="60pt"
        android:background="@drawable/selector_round_btn"
        android:gravity="center"
        android:paddingStart="30pt"
        android:paddingEnd="30pt"
        android:text="获取"
        android:textColor="@color/white"
        android:textSize="@dimen/item_label_text_size"
        app:layout_constraintBottom_toBottomOf="@id/et_device_number"
        app:layout_constraintLeft_toRightOf="@id/et_device_number"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/et_device_number" />

    <Button
        android:id="@+id/btn_demarcate"
        android:layout_width="320pt"
        android:layout_height="88pt"
        android:layout_marginStart="60pt"
        android:layout_marginEnd="60pt"
        android:background="@drawable/selector_round_btn"
        android:gravity="center"
        android:paddingStart="30pt"
        android:paddingEnd="30pt"
        android:text="标定"
        android:textColor="@color/white"
        android:textSize="@dimen/text_middle_size"
        app:layout_constraintBottom_toBottomOf="@id/tv_demarcate"
        app:layout_constraintLeft_toLeftOf="@id/tv_device_info2"
        app:layout_constraintTop_toTopOf="@id/tv_demarcate" />

    <Button
        android:id="@+id/btn_up"
        android:layout_width="320pt"
        android:layout_height="88pt"
        android:layout_marginStart="60pt"
        android:layout_marginEnd="60pt"
        android:background="@drawable/selector_round_btn"
        android:gravity="center"
        android:paddingStart="30pt"
        android:paddingEnd="30pt"
        android:text="上升"
        android:textColor="@color/white"
        android:textSize="@dimen/text_middle_size"
        app:layout_constraintBottom_toBottomOf="@id/tv_up"
        app:layout_constraintLeft_toLeftOf="@id/tv_device_info2"
        app:layout_constraintTop_toTopOf="@id/tv_up" />

    <Button
        android:id="@+id/btn_down"
        android:layout_width="320pt"
        android:layout_height="88pt"
        android:layout_marginStart="60pt"
        android:layout_marginEnd="60pt"
        android:background="@drawable/selector_round_btn"
        android:gravity="center"
        android:paddingStart="30pt"
        android:paddingEnd="30pt"
        android:text="下降"
        android:textColor="@color/white"
        android:textSize="@dimen/text_middle_size"
        app:layout_constraintBottom_toBottomOf="@id/tv_down"
        app:layout_constraintLeft_toLeftOf="@id/tv_device_info2"
        app:layout_constraintTop_toTopOf="@id/tv_down" />

    <EditText
        android:id="@+id/et_device_number"
        style="@style/CommonEditText"
        android:layout_width="0dp"
        android:layout_marginStart="30pt"
        android:gravity="center"
        android:inputType="number"
        android:text="0755123456"
        android:textSize="@dimen/item_label_text_size"
        app:layout_constraintBottom_toBottomOf="@id/tv_label_search"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/tv_label_search"
        app:layout_constraintRight_toLeftOf="@id/btn_search"
        app:layout_constraintTop_toTopOf="@id/tv_label_search" />

    <TextView
        android:id="@+id/tv_label_search"
        android:layout_width="wrap_content"
        android:layout_height="160pt"
        style="@style/TextLabel"
        android:text="车位号"
        android:textColor="@color/text_black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_device_info_label"
        android:layout_width="0dp"
        android:background="@color/white"
        style="@style/TextLabel"
        android:text="设备信息"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_device_info"
        app:layout_constraintTop_toBottomOf="@id/tv_label_search" />

    <TextView
        android:id="@+id/tv_device_info"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        android:gravity="start|center_vertical"
        android:text="0123456789abcdefg"
        android:textColor="@color/black"
        android:textSize="@dimen/item_label_text_size"
        app:layout_constraintHorizontal_weight="2.5"
        app:layout_constraintLeft_toRightOf="@id/tv_device_info_label"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tv_device_info_label"
        app:layout_constraintTop_toTopOf="@id/tv_device_info_label" />

    <TextView
        android:id="@+id/tv_device_info_label1"
        android:layout_width="0dp"
        android:background="@color/white"
        style="@style/TextLabel"
        android:text="设备信息"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_device_info1"
        app:layout_constraintTop_toBottomOf="@id/tv_device_info_label" />


    <TextView
        android:id="@+id/tv_device_info1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        android:gravity="start|center_vertical"
        android:text="0123456789abcdefg"
        android:textColor="@color/black"
        android:textSize="@dimen/item_label_text_size"
        app:layout_constraintHorizontal_weight="2.5"
        app:layout_constraintLeft_toRightOf="@id/tv_device_info_label1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tv_device_info_label1"
        app:layout_constraintTop_toTopOf="@id/tv_device_info_label1" />

    <TextView
        android:id="@+id/tv_device_info_label2"
        android:layout_width="0dp"
        android:background="@color/white"
        style="@style/TextLabel"
        android:text="设备信息"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_device_info2"
        app:layout_constraintTop_toBottomOf="@id/tv_device_info_label1" />

    <TextView
        android:id="@+id/tv_device_info2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        android:gravity="start|center_vertical"
        android:text="0123456789abcdefg"
        android:textColor="@color/black"
        android:textSize="@dimen/item_label_text_size"
        app:layout_constraintHorizontal_weight="2.5"
        app:layout_constraintLeft_toRightOf="@id/tv_device_info_label2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tv_device_info_label2"
        app:layout_constraintTop_toTopOf="@id/tv_device_info_label2" />


    <TextView
        android:id="@+id/tv_demarcate"
        android:layout_width="match_parent"
        android:layout_marginTop="30pt"
        android:background="@color/white"
        style="@style/TextLabel"
        android:text="设备标定"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_device_info_label2" />

    <TextView
        android:id="@+id/tv_up"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:text="设备上升"
        style="@style/TextLabel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_demarcate" />

    <TextView
        android:id="@+id/tv_down"
        android:layout_width="match_parent"
        android:background="@color/white"
        style="@style/TextLabel"
        android:text="设备下降"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_up" />

    <View
        android:id="@+id/v_line"
        android:layout_width="0dp"
        android:layout_height="@dimen/dividerHeight"
        android:layout_marginStart="60pt"
        android:layout_marginEnd="60pt"
        android:background="@color/lightGray"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_device_info_label" />


    <View
        android:id="@+id/v_line1"
        android:layout_width="0dp"
        android:layout_height="@dimen/dividerHeight"
        android:layout_marginStart="60pt"
        android:layout_marginEnd="60pt"
        android:background="@color/lightGray"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_device_info_label1" />

    <View
        android:id="@+id/v_line2"
        android:layout_width="0dp"
        android:layout_height="@dimen/dividerHeight"
        android:background="@color/lightGray"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_device_info_label2" />

    <View
        android:id="@+id/v_line3"
        android:layout_width="0dp"
        android:layout_height="@dimen/dividerHeight"
        android:layout_marginStart="60pt"
        android:layout_marginEnd="60pt"
        android:background="@color/lightGray"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_demarcate" />

    <View
        android:id="@+id/v_line4"
        android:layout_width="0dp"
        android:layout_height="@dimen/dividerHeight"
        android:layout_marginStart="60pt"
        android:layout_marginEnd="60pt"
        android:background="@color/lightGray"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_up" />

    <View
        android:id="@+id/v_line5"
        android:layout_width="0dp"
        android:layout_height="@dimen/dividerHeight"
        android:background="@color/lightGray"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_down" />
</androidx.constraintlayout.widget.ConstraintLayout>