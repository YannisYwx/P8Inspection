<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_upload_picture"
        android:layout_width="220pt"
        android:layout_height="220pt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/iv_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/iv_upload_picture"
        app:layout_constraintRight_toRightOf="@id/iv_upload_picture"
        android:padding="10pt"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_delete_menu"
        android:visibility="visible"/>
</androidx.constraintlayout.widget.ConstraintLayout>