<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_search"
        android:layout_width="wrap_content"
        android:layout_height="100pt"
        android:layout_marginEnd="60pt"
        android:background="@drawable/selector_round_btn"
        android:gravity="center"
        android:paddingStart="20pt"
        android:paddingEnd="20pt"
        android:text="查询"
        android:textColor="@color/white"
        android:textSize="@dimen/item_label_text_size"
        app:layout_constraintBottom_toBottomOf="@+id/v_scan"
        app:layout_constraintLeft_toRightOf="@id/v_scan"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/v_scan" />

    <View
        android:id="@+id/v_top"
        android:layout_width="match_parent"
        android:layout_height="140pt"
        android:background="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_shadow"
        android:layout_width="match_parent"
        android:layout_height="9pt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v_top"
        android:layout_marginBottom="@dimen/bottom_bar_height"
        android:background="@mipmap/actionbar_shadow_down" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/v_scan"
        android:layout_width="0dp"
        android:layout_height="88pt"
        android:layout_marginStart="48pt"
        android:layout_marginTop="30pt"
        android:layout_marginEnd="48pt"
        android:layout_marginBottom="30pt"
        android:background="@drawable/shape_scan"
        android:drawablePadding="50pt"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="@id/v_top"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btn_search"
        app:layout_constraintTop_toTopOf="@id/v_top">

        <ImageView
            android:id="@+id/search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30pt"
            android:src="@mipmap/icon_search"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.p8.common.widget.DeletableEditText
            android:id="@+id/det_order_number"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="30pt"
            android:layout_marginEnd="30pt"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入订单流水号"
            android:lines="1"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_mini_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@id/search"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        android:id="@+id/srl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_shadow"
        app:srlAccentColor="@color/colorPrimary"
        app:srlEnableHeaderTranslationContent="false"
        app:srlEnableNestedScrolling="true"
        app:srlEnablePreviewInEditMode="false"
        app:srlPrimaryColor="@color/window_bg">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never" />

        <com.scwang.smart.refresh.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srlClassicsSpinnerStyle="FixedBehind" />

        <com.scwang.smart.refresh.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srlClassicsSpinnerStyle="FixedBehind" />

    </com.scwang.smart.refresh.layout.SmartRefreshLayout>
</androidx.constraintlayout.widget.ConstraintLayout>