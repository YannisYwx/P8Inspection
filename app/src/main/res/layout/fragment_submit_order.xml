<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource">
    
    <View
        android:id="@+id/v_white_bg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tv_street"/>
    
    <EditText
        android:id="@+id/et_parking_number"
        android:layout_width="600pt"
        style="@style/CommonEditText"
        android:background="@drawable/shape_grey_radius_5"
        android:hint="请填写泊位号"
        android:textSize="@dimen/text_mini_size"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@id/tv_parking_number"
        app:layout_constraintLeft_toRightOf="@id/tv_parking_number"
        app:layout_constraintTop_toTopOf="@id/tv_parking_number" />

    <EditText
        android:id="@+id/et_device_number"
        android:layout_width="600pt"
        style="@style/CommonEditText"
        android:background="@drawable/shape_grey_radius_5"
        android:digits="@string/only_allow_input"
        android:hint="请填写设备号"
        android:textSize="@dimen/text_mini_size"
        app:layout_constraintBottom_toBottomOf="@id/tv_device_number"
        app:layout_constraintLeft_toRightOf="@id/tv_device_number"
        app:layout_constraintTop_toTopOf="@id/tv_device_number" />

    <TextView
        android:id="@+id/et_address"
        android:layout_width="600pt"
        style="@style/CommonEditText"
        android:background="@drawable/shape_grey_radius_5"
        android:hint="请选择省区市"
        android:textSize="@dimen/text_mini_size"
        app:layout_constraintBottom_toBottomOf="@id/tv_address"
        app:layout_constraintLeft_toRightOf="@id/tv_address"
        app:layout_constraintTop_toTopOf="@id/tv_address"
        app:drawableEndCompat="@mipmap/down" />

    <TextView
        android:id="@+id/tv_device_number"
        android:layout_width="300pt"
        android:layout_height="140pt"
        android:gravity="start|center_vertical"
        android:paddingStart="50pt"
        android:paddingEnd="50pt"
        android:text="设备号："
        android:textColor="@color/text_black"
        android:textSize="@dimen/item_label_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintRight_toLeftOf="@id/et_device_number"
        app:layout_constraintTop_toBottomOf="@id/tv_parking_number" />

    <TextView
        android:id="@+id/tv_parking_number"
        android:layout_width="300pt"
        android:layout_height="140pt"
        android:gravity="start|center_vertical"
        android:paddingStart="50pt"
        android:paddingEnd="50pt"
        android:text="泊位号："
        android:textColor="@color/text_black"
        android:textSize="@dimen/item_label_text_size"
        app:layout_constraintBottom_toTopOf="@id/v_line1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/et_parking_number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="300pt"
        android:layout_height="140pt"
        android:gravity="start|center_vertical"
        android:paddingStart="50pt"
        android:paddingEnd="50pt"
        android:text="省市区："
        android:textColor="@color/text_black"
        android:textSize="@dimen/item_label_text_size"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintRight_toLeftOf="@id/et_address"
        app:layout_constraintTop_toBottomOf="@id/tv_device_number" />

    <TextView
        android:id="@+id/tv_street"
        android:layout_width="300pt"
        android:layout_height="140pt"
        android:gravity="start|center_vertical"
        android:paddingStart="50pt"
        android:paddingEnd="50pt"
        android:text="街   道："
        android:textColor="@color/text_black"
        android:textSize="@dimen/item_label_text_size"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintRight_toLeftOf="@id/et_address"
        app:layout_constraintTop_toBottomOf="@id/tv_address" />

    <EditText
        android:id="@+id/et_street"
        android:layout_width="600pt"
        style="@style/CommonEditText"
        android:background="@drawable/shape_grey_radius_5"
        android:digits="@string/only_allow_input"
        android:hint="请输入当前街道"
        android:textSize="@dimen/text_mini_size"
        app:layout_constraintBottom_toBottomOf="@id/tv_street"
        app:layout_constraintLeft_toRightOf="@id/tv_street"
        app:layout_constraintTop_toTopOf="@id/tv_street" />
    
    <TextView
        android:id="@+id/tv_remark"
        android:layout_width="0dp"
        android:layout_height="400pt"
        android:background="@color/white"
        android:text="备注："
        android:textColor="@color/text_black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_street"
        android:layout_marginTop="30pt"
        android:paddingStart="50pt"
        android:paddingEnd="30pt"
        android:paddingTop="60pt"
        android:textSize="@dimen/item_label_text_size"/>

    <EditText
        android:id="@+id/et_remark"
        android:layout_width="0dp"
        android:layout_height="400pt"
        android:paddingTop="55pt"
        android:paddingBottom="55pt"
        android:paddingEnd="50pt"
        android:paddingStart="1pt"
        android:lines="5"
        android:hint="请填写当前设备故障描述"
        android:textSize="@dimen/text_middle_size"
        android:gravity="top"
        android:textColor="@color/black"
        app:layout_constraintLeft_toRightOf="@id/tv_remark"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_remark"
        app:layout_constraintBottom_toBottomOf="@id/tv_remark"
        android:background="@color/white"/>
    
    <TextView
        android:id="@+id/tv_pics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="上传照片："
        android:paddingStart="50pt"
        android:paddingTop="30pt"
        android:paddingBottom="30pt"
        android:textColor="@color/text_black"
        android:background="@color/white"
        android:layout_marginTop="30pt"
        android:textSize="@dimen/item_label_text_size"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_remark"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_pics"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="60pt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_pics"
        app:layout_constraintBottom_toTopOf="@id/btn_submit"
        android:background="@color/white"/>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/NormalButton"
        android:paddingTop="30pt"
        android:paddingBottom="30pt"
        android:text="提交"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="60pt"

        />

    <View
        android:id="@+id/v_line1"
        android:layout_width="0dp"
        android:layout_height="@dimen/dividerHeight"
        android:layout_marginStart="50pt"
        android:layout_marginEnd="50pt"
        android:background="@color/lightGray"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_parking_number" />

    <View
        android:id="@+id/v_line2"
        android:layout_width="0dp"
        android:layout_height="@dimen/dividerHeight"
        android:layout_marginStart="50pt"
        android:layout_marginEnd="50pt"
        android:background="@color/lightGray"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_device_number" />

    <View
        android:id="@+id/v_line3"
        android:layout_width="0dp"
        android:layout_height="@dimen/dividerHeight"
        android:layout_marginStart="50pt"
        android:layout_marginEnd="50pt"
        android:background="@color/lightGray"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_address" />

</androidx.constraintlayout.widget.ConstraintLayout>