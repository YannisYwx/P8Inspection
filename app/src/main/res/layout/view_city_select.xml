<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/mask_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        android:background="#B0000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/city_layout"
        android:background="@color/white"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="630pt">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_provinces"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/v1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:layout_width="0pt"
            android:layout_height="match_parent"/>
        <View
            android:id="@+id/v1"
            app:layout_constraintLeft_toRightOf="@+id/rv_provinces"
            app:layout_constraintRight_toLeftOf="@+id/rv_cities"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="12pt"
            android:layout_marginBottom="12pt"
            android:layout_width="3pt"
            android:layout_height="match_parent"
            android:background="#D4D4D4"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_cities"
            app:layout_constraintLeft_toRightOf="@+id/v1"
            app:layout_constraintRight_toLeftOf="@+id/v2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="0pt"
            android:layout_height="match_parent"/>
        <View
            android:id="@+id/v2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/rv_cities"
            app:layout_constraintRight_toLeftOf="@+id/rv_areas"
            android:layout_marginTop="12pt"
            android:layout_marginBottom="12pt"
            android:layout_width="3pt"
            android:layout_height="match_parent"
            android:background="#D4D4D4"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_areas"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/v2"
            app:layout_constraintRight_toLeftOf="@+id/v3"
            android:layout_width="0pt"
            android:layout_height="match_parent"/>
        <View
            android:id="@+id/v3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/rv_areas"
            app:layout_constraintRight_toLeftOf="@+id/rv_street"
            android:layout_marginTop="12pt"
            android:layout_marginBottom="12pt"
            android:layout_width="3pt"
            android:layout_height="match_parent"
            android:background="#D4D4D4"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_street"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/v3"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="0pt"
            android:layout_height="match_parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/car_type_layout"
        android:background="@color/white"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="630pt"
        android:orientation="horizontal">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_car_type"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>